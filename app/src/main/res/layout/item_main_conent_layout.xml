<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    android:background="#337ab800">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true"  >

        <com.rengwuxian.materialedittext.MaterialEditText
            android:id="@+id/main_materialEditText_findClass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:hint="查询教室"
            app:met_baseColor="#000"
            app:met_errorColor="#ddaa00"
            app:met_floatingLabel="highlight"
            app:met_floatingLabelText="查询教室"
            app:met_minCharacters="2"
            app:met_primaryColor="#982360"
            app:met_singleLineEllipsis="true" />

        <mehdi.sakout.fancybuttons.FancyButton
            android:id="@+id/main_fancyButton_findClassButton"
            android:layout_width="44dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="14dp"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            app:fb_borderColor="#090b0b"
            app:fb_borderWidth="0dp"
            app:fb_defaultColor="#777ab800"
            app:fb_focusColor="#779bd823"
            app:fb_fontIconResource="&#xf101;"
            app:fb_fontIconSize="20dp"
            app:fb_ghost="true"
            app:fb_iconPaddingRight="0dp"
            app:fb_iconPosition="left"
            app:fb_radius="20dp"
            app:fb_text=""
            app:fb_textColor="#FFFFFF"
            app:fb_textSize="14dp" />
    </RelativeLayout>
    
    
    <View
        android:layout_centerInParent="true"
        android:id="@+id/main_view"
        android:layout_width="2dp"
        android:layout_height="160dp"
        android:background="#772b3131"/>

    <!--<View-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="#772b3131"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_above="@id/main_view"/>-->

    <!--<View-->
        <!--android:layout_width="30dp"-->
        <!--android:layout_height="2dp"-->
        <!--android:background="#772b3131"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:layout_below="@id/main_view"/>-->

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/main_fancyButton_allClass"
        android:layout_toLeftOf="@id/main_view"
        android:layout_marginRight="20dp"
        android:layout_centerVertical="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:fb_borderColor="#090b0b"
        app:fb_borderWidth="0dp"
        app:fb_defaultColor="#7ab800"
        app:fb_focusColor="#7ab800"
        app:fb_fontIconResource="&#xf05b;"
        app:fb_fontIconSize="90dp"
        app:fb_ghost="true"
        app:fb_iconPaddingRight="5dp"
        app:fb_iconPaddingBottom="20dp"
        app:fb_iconPosition="top"
        app:fb_radius="30dp"
        app:fb_text="所有教室"
        app:fb_textColor="#FFFFFF"
        app:fb_textSize="14dp" />

    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/main_fancyButton_freeClass"
        android:layout_toRightOf="@id/main_view"
        android:layout_marginLeft="20dp"
        android:layout_centerVertical="true"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        app:fb_borderColor="#090b0b"
        app:fb_borderWidth="0dp"
        app:fb_defaultColor="#7ab800"
        app:fb_focusColor="#7ab800"
        app:fb_fontIconResource="&#xf094;"
        app:fb_fontIconSize="90dp"
        app:fb_ghost="true"
        app:fb_iconPaddingLeft="5dp"
        app:fb_iconPaddingBottom="22dp"
        app:fb_iconPosition="top"
        app:fb_radius="30dp"
        app:fb_text="空闲教室"
        app:fb_textColor="#FFFFFF"
        app:fb_textSize="14dp" />


</RelativeLayout>
