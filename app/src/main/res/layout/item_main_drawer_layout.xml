<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@mipmap/drawer_background">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/main_circleImageView_headPortrait"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:src="@mipmap/administrator"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:lines="1"
            android:padding="5dp"
            android:text="未设置签名" />

    </RelativeLayout>


    <mehdi.sakout.fancybuttons.FancyButton
        android:id="@+id/main_fancyButton_administrator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:paddingLeft="0dp"
        android:paddingRight="60dp"
        android:paddingTop="10dp"
        app:fb_borderColor="#090b0b"
        app:fb_borderWidth="1dp"
        app:fb_defaultColor="#7ab800"
        app:fb_focusColor="#9bd823"
        app:fb_fontIconResource="&#xf0ad;"
        app:fb_fontIconSize="20dp"
        app:fb_ghost="false"
        app:fb_iconPaddingRight="60dp"
        app:fb_iconPosition="left"
        app:fb_radius="0dp"
        app:fb_text="管理员"
        app:fb_textColor="#FFFFFF"
        app:fb_textSize="14dp" />


</LinearLayout>
